{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "config", "constants", "controllers/middlewares/models", "routes", "index.ts", "controllers", "constants", "middlewares", "models"],
    "exclude": ["node_modules"]
}
